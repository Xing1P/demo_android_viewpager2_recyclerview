<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntryActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/main_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Recyclerview and Viewpager 2"
        android:onClick="mainActivity"
        app:layout_constraintBottom_toTopOf="@id/second_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/second_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Viewpager 2 Manipulated"
        android:onClick="secondActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_button" />

</androidx.constraintlayout.widget.ConstraintLayout>